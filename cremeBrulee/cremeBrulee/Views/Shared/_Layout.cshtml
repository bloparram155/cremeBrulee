<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Farmacia León</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="#">FarmaciaLeon</a>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <ul class="nav navbar-nav navbar-right">
                        <li><p>Bienvenido a tu Farmacia</p></li>
                        <li><a href="@Url.Action("Create","Usuario")"><span class="glyphicon glyphicon-user"></span> Registrarse</a></li>
                        <li><a href="@Url.Action("Index","Usuario")"><span class="glyphicon glyphicon-log-in"></span> Iniciar Sesión</a></li>
                       
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <ul class="nav navbar-header">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Productos
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#"></a></li>
                                <li><a href="#">Page 1-2</a></li>
                                <li><a href="#">Page 1-3</a></li>
                            </ul>
                        </li>
                    </ul>
                    <div class="nav navbar-nav">
                        <li><a href="#">Empresa</a></li>
                        <li><a href="#">Empresa</a></li>
                        <li><a href="#">Empresa</a></li>
                    </div>
                    
                </div>
                <div class="col-lg-6">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#"><span class="glyphicon glyphicon-shopping-cart"></span>Carrito</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </header>
   
    <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
     </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
