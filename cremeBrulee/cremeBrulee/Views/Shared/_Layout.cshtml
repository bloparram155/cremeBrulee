<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Farmacia León</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/styles.css" rel="stylesheet" />
</head>
<body>
    <header class="navbar navbar-inverse" id="headercolor">
        <div class="container-fluid">
            <div class="row" id="logo"></div>
            <div class="row navi">
                <div class="col-lg-10">
                    <div class="navbar-header">
                        <a class="navbar-brand headerleon" href="#"><h1>Farmacia León</h1></a>
                    </div>
                </div>
                    <div class="input-group" id="buscar">
                        <input type="text" class="form-control" placeholder="Search">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </div>
                     </div>
                </div>
            <div class="row navi">
                <div class="col-lg-10">
                    <div class="nav navbar-nav" id="headernav">
                        <li><a href="#">Nosotros</a></li>
                        <li><a href="#">Sucursales</a></li>
                        <li><a href="#">Contacto</a></li>
                        <li>
                            <ul class="nav navbar-header">
                                <li class="dropdown">
                                    <a class="dropdown-toggle headerleon" id="productos" data-toggle="dropdown" href="#">
                                        Productos
                                        <span class="caret"></span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a href="#"></a></li>
                                        <li><a href="#">Belleza</a></li>
                                        <li><a href="#">Salud</a></li>
                                        <li><a href="#">Cuidado Personal</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                    </div>
                </div>
                <div class="col-lg-2">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="@Url.Action("Create","Usuario")"><span class="glyphicon glyphicon-user"></span> Registrarse</a></li>
                        <li><a href="@Url.Action("Index","Usuario")"><span class="glyphicon glyphicon-log-in"></span> Iniciar Sesión</a></li>
                    </ul>
                </div>
            </div>
            <!--<div class="row">
                <div class="col-lg-6"> 
                   
                    
                </div>
                <div class="col-lg-6">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#"><span class="glyphicon glyphicon-shopping-cart"></span>Carrito</a></li>
                    </ul>
                </div>
            </div>-->
        </div>
    </header>
   
    <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
     </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
